{
    "compilerOptions": {
        "module": "es6",
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./es6",
        "importHelpers": true,
        "moduleResolution": "node",

        "lib": [
            "dom",
            "dom.iterable",
            "es2015.core",
            "es2015.collection",
            "es2015.promise",
            "es2015.reflect",
            "es2015",
            "es2016",
            "es2017",
        ],

        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
    },
    "include": [
      "src/**/*.ts",
      "src/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
